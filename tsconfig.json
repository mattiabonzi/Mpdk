{
  "compilerOptions": {
    "declaration": true,
    "importHelpers": true, 
    "module": "ES2022",
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "target": "es2019",
    "typeRoots" : ["src/@types", "./node_modules/@types"],
    "lib": ["ES2021.String"],
    "esModuleInterop": true,
    "composite": true
  },
  
  "include": [
    "src/**/*"
  ],
  "ts-node": {
    "esm": true
  }
}

